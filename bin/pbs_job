#!/usr/bin/env ruby
require "rubygems"
require 'thor'

module PbsJob
  class Generate < Thor::Group
    include Thor::Actions

    argument :name, :type => :string, :desc => 'Name of the new job.'
  end

  class PbsJob < Thor
    map 'g' => :generate

    register(
      Generate,
      'generate',
      'generate NAME',
      "Generates a new PBS job with the name NAME"
    )
  end
end


